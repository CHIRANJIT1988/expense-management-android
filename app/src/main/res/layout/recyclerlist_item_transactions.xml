<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp" >


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_order"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >


        <TextView
            android:id="@+id/transaction_type"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_alignParentStart="true"
            android:textSize="24sp"
            android:gravity="center"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/transaction_purpose"
            android:layout_toEndOf="@id/transaction_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/myTextPrimaryColor"
            android:paddingTop="10dp"
            android:paddingEnd="8dp"
            android:paddingStart="0dp"
            android:paddingBottom="3dp"
            android:textSize="14sp"
            android:singleLine="true"
            android:text="Partner 1" />


        <TextView
            android:id="@+id/message"
            android:layout_toEndOf="@id/transaction_type"
            android:layout_below="@+id/transaction_purpose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="5dp"
            android:paddingStart="0dp"
            android:ellipsize="marquee"
            android:maxLines="2"
            android:textSize="12sp"
            android:text="bardhan.jit@gmail.com"/>



        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message"
            android:layout_alignParentEnd="true"
            android:paddingEnd="5dp"
            android:paddingStart="0dp"
            android:paddingBottom="5dp"
            android:drawableStart="@drawable/ic_currency_inr_grey600_18dp"
            android:text="300.00"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/transaction_purpose"
            android:layout_alignParentEnd="true"
            android:paddingEnd="5dp"
            android:paddingStart="0dp"
            android:paddingBottom="5dp"
            android:text="23/12/2016"
            android:textSize="12sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_below="@+id/transaction_type"
            android:background="@color/divider" />

    </RelativeLayout>

</android.support.v7.widget.CardView>